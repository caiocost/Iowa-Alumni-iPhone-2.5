function FeatureRow(e,t,i){this.containerheight=0;var o=Ti.UI.createTableViewRow({hasChild:!0,link:e.url,height:355,padding:0,top:0,bottom:0,layout:"vertical",backgroundColor:"e2e2e2",borderRadius:.5});o.rightImage=null,o.backgroundSelectedImage=null,o.backgroundFocusImage=null;var a=Titanium.UI.createView({backgroundColor:"transparent",height:300,width:300,left:10,top:10,bottom:0,padding:0,borderRadius:5});this.containerheight=getContainerHeight(e.image),a.height=this.containerheight+65+30,o.height=this.containerheight+100+8;var n=Ti.UI.createImageView({image:e.image,width:300,height:this.containerheight,hires:!0,top:30}),r=Ti.UI.createImageView({width:300,height:40,hires:!0,top:1,image:"gold.png"}),l=Ti.UI.createImageView({width:300,height:150,hires:!0,top:this.containerheight-120,image:"shadow.png"});a.add(n),a.add(l),a.add(r),titlelbl=getTitleLabel(e.title,this.containerheight+30),a.add(titlelbl),desclbl=getDescriptionLabel(e.description,this.containerheight+30),a.add(desclbl);var d=Ti.UI.createLabel({text:"Posted "+new DateObject(e.pubDate).prettyDate()+" in Kudos to Iowa People",top:8,left:10,bottom:10,height:15,textAlign:"left",width:270,color:"#5c4e1a",shadowColor:"#f0d87f",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-CondensedBold",fontSize:12,fontWeight:"bold"}});return a.add(d),o.add(a),o.addEventListener("click",function(){new WebView(e.url),t.trackEvent({category:"Featured Articles",action:"click",label:"An Event in the "+i+"'s Window - "+e.url,value:1})}),o}function getContainerHeight(e){var t=Ti.UI.createImageView({image:e,width:"auto",height:"auto",hires:!0});new CachedImageView("imageDirectoryName",e,t);var i=t.toImage().height,o=t.toImage().width,a=i/o;return Math.floor(300*a)}function getTitleLabel(e,t){var i=Ti.UI.createLabel({text:e,height:"auto",width:250,color:"#efc006",font:{fontFamily:"HelveticaNeue-Light",fontSize:25,fontWeight:"bold"}}),o=Ti.UI.createView({width:250,height:"auto"});o.add(i),theheight=o.toImage().height;var a=Ti.UI.createLabel({text:e,left:10,bottom:10,height:theheight,textAlign:"left",width:250,color:"#efc006",shadowColor:"#000000",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-Light",fontSize:25,fontWeight:"bold"}});return a.top=t-theheight-5,a}function getDescriptionLabel(e,t){var i=Ti.UI.createView({backgroundColor:"#0c0c0c",backgroundImage:"dark.jpg",width:300,height:65,top:t}),o=Ti.UI.createLabel({text:e,left:10,top:0,bottom:10,height:55,textAlign:"left",width:260,color:"#ffffff",shadowColor:"#000000",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-Light",fontSize:14,fontWeight:"bold"}});return i.add(o),i}var DateObject=require("ui/common/DateObject"),CachedImageView=require("ui/common/CachedImageView"),WebView=require("ui/common/WebView");module.exports=FeatureRow;